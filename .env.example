# Environment variables for ZoomRec
# Copy this file to .env and customize

# Flask secret key (change this!)
SECRET_KEY=your-super-secret-key-change-me

# Database URL
DATABASE_URL=sqlite:///zoomrec.db

# Recordings directory
RECORDINGS_DIR=/opt/zoomrec/recordings

# Server settings
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Recording limits
MAX_CONCURRENT_RECORDINGS=3

# Display for headless recording
DISPLAY=:99
